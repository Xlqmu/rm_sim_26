<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="mecanum_robot">

    <!-- BASE FOOTPRINT (虚拟链接) -->
    <link name="base_footprint">
      <inertial>
        <mass>0.001</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
        </inertia>
      </inertial>
    </link>

    <!-- CHASSIS -->
    <link name="chassis">
      <pose relative_to="base_footprint">0 0 0.225 0 0 0</pose>
      <inertial>
        <mass>15.0</mass>
        <inertia>
          <ixx>0.295</ixx>
          <iyy>0.645</iyy>
          <izz>0.850</izz>
        </inertia>
      </inertial>
      <visual name="chassis_visual">
        <geometry>
          <box>
            <size>0.6 0.4 0.15</size>
          </box>
        </geometry>
        <material>
          <ambient>0.35 0.35 0.35 1</ambient>
          <diffuse>0.35 0.35 0.35 1</diffuse>
        </material>
      </visual>
      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>0.6 0.4 0.15</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- BASE_FOOTPRINT TO CHASSIS JOINT -->
    <joint name="base_footprint_to_chassis" type="fixed">
      <parent>base_footprint</parent>
      <child>chassis</child>
    </joint>

    <!-- FRONT LEFT WHEEL -->
    <link name="front_left_wheel_link">
      <pose relative_to="chassis">0.25 0.25 -0.075 1.5707 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.036458</ixx>
          <iyy>0.036458</iyy>
          <izz>0.03125</izz>
        </inertia>
      </inertial>
      <visual name="wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.08</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>
      <collision name="wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.08</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.5</mu>
              <mu2>0.5</mu2>
              <fdir1>1 -1 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <joint name="front_left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_left_wheel_link</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- FRONT RIGHT WHEEL -->
    <link name="front_right_wheel_link">
      <pose relative_to="chassis">0.25 -0.25 -0.075 1.5707 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.036458</ixx>
          <iyy>0.036458</iyy>
          <izz>0.03125</izz>
        </inertia>
      </inertial>
      <visual name="wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.08</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>
      <collision name="wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.08</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.5</mu>
              <mu2>0.5</mu2>
              <fdir1>1 1 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <joint name="front_right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_right_wheel_link</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- REAR LEFT WHEEL -->
    <link name="rear_left_wheel_link">
      <pose relative_to="chassis">-0.25 0.25 -0.075 1.5707 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.036458</ixx>
          <iyy>0.036458</iyy>
          <izz>0.03125</izz>
        </inertia>
      </inertial>
      <visual name="wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.08</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>
      <collision name="wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.08</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.5</mu>
              <mu2>0.5</mu2>
              <fdir1>1 -1 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <joint name="rear_left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_left_wheel_link</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- REAR RIGHT WHEEL -->
    <link name="rear_right_wheel_link">
      <pose relative_to="chassis">-0.25 -0.25 -0.075 1.5707 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.036458</ixx>
          <iyy>0.036458</iyy>
          <izz>0.03125</izz>
        </inertia>
      </inertial>
      <visual name="wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.08</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>
      <collision name="wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.08</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.5</mu>
              <mu2>0.5</mu2>
              <fdir1>1 1 0</fdir1>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <joint name="rear_right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_right_wheel_link</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <!-- LIDAR -->
    <link name="livox_lidar">
      <pose relative_to="chassis">0.2 0 0.125 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="lidar_visual">
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>
      <collision name="lidar_collision">
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
      </collision>
      <!-- LIDAR SENSOR -->
      <sensor name="lidar" type="gpu_lidar">
        <update_rate>10</update_rate>
        <lidar>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
            <vertical>
              <samples>1</samples>
              <resolution>1</resolution>
              <min_angle>0</min_angle>
              <max_angle>0</max_angle>
            </vertical>
          </scan>
          <range>
            <min>0.1</min>
            <max>30.0</max>
            <resolution>0.01</resolution>
          </range>
        </lidar>
      </sensor>
    </link>

    <joint name="lidar_joint" type="fixed">
      <parent>chassis</parent>
      <child>livox_lidar</child>
    </joint>

    <!-- ========== 云台模块开始 ========== -->

    <!-- 云台底座 -->
    <link name="gimbal_base">
      <pose relative_to="chassis">0 0 0.125 0 0 0</pose>
      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.002</ixx>
          <iyy>0.002</iyy>
          <izz>0.002</izz>
        </inertia>
      </inertial>
      <visual name="gimbal_base_visual">
        <geometry>
          <box>
            <size>0.12 0.12 0.06</size>
          </box>
        </geometry>
        <material>
          <ambient>0.5 0.5 0.5 1</ambient>
          <diffuse>0.5 0.5 0.5 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
      <collision name="gimbal_base_collision">
        <geometry>
          <box>
            <size>0.12 0.12 0.06</size>
          </box>
        </geometry>
      </collision>
    </link>

    <joint name="gimbal_base_joint" type="fixed">
      <parent>chassis</parent>
      <child>gimbal_base</child>
    </joint>

    <!-- 云台偏航轴 (Yaw) -->
    <link name="gimbal_yaw">
      <pose relative_to="gimbal_base">0 0 0.08 0 0 0</pose>
      <inertial>
        <mass>0.3</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="gimbal_yaw_visual">
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.10</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.8 0.2 0.2 1</ambient>
          <diffuse>0.8 0.2 0.2 1</diffuse>
          <specular>0.5 0.1 0.1 1</specular>
        </material>
      </visual>
      <collision name="gimbal_yaw_collision">
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.10</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <joint name="gimbal_yaw_joint" type="revolute">
      <parent>gimbal_base</parent>
      <child>gimbal_yaw</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-3.14159</lower>
          <upper>3.14159</upper>
          <effort>10</effort>
          <velocity>3.14</velocity>
        </limit>
        <dynamics>
          <damping>0.1</damping>
          <friction>0.01</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- 云台俯仰支架 -->
    <link name="gimbal_pitch_bracket">
      <pose relative_to="gimbal_yaw">0 0 0.08 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="gimbal_pitch_bracket_visual">
        <geometry>
          <box>
            <size>0.08 0.12 0.04</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.8 1</ambient>
          <diffuse>0.2 0.2 0.8 1</diffuse>
          <specular>0.1 0.1 0.5 1</specular>
        </material>
      </visual>
      <collision name="gimbal_pitch_bracket_collision">
        <geometry>
          <box>
            <size>0.08 0.12 0.04</size>
          </box>
        </geometry>
      </collision>
    </link>

    <joint name="gimbal_pitch_bracket_joint" type="fixed">
      <parent>gimbal_yaw</parent>
      <child>gimbal_pitch_bracket</child>
    </joint>

    <!-- 云台俯仰轴 (Pitch) -->
    <link name="gimbal_pitch">
      <pose relative_to="gimbal_pitch_bracket">0.06 0 0 0 0 0</pose>
      <inertial>
        <mass>0.25</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.002</iyy>
          <izz>0.002</izz>
        </inertia>
      </inertial>
      <visual name="gimbal_pitch_visual">
        <geometry>
          <box>
            <size>0.10 0.08 0.06</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.8 0.2 1</ambient>
          <diffuse>0.2 0.8 0.2 1</diffuse>
          <specular>0.1 0.5 0.1 1</specular>
        </material>
      </visual>
      <collision name="gimbal_pitch_collision">
        <geometry>
          <box>
            <size>0.10 0.08 0.06</size>
          </box>
        </geometry>
      </collision>
    </link>

    <joint name="gimbal_pitch_joint" type="revolute">
      <parent>gimbal_pitch_bracket</parent>
      <child>gimbal_pitch</child>
      <axis>
        <xyz>0 -1 0</xyz>
        <limit>
          <lower>-0.785398</lower>          <!-- -45度 -->
          <upper>0.785398</upper>          <!-- +45度 -->
          <effort>10</effort>
          <velocity>2.0</velocity>
        </limit>
        <dynamics>
          <damping>0.1</damping>
          <friction>0.01</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- 摄像头 (安装在云台俯仰轴上) -->
    <link name="camera">
      <pose relative_to="gimbal_pitch">0.08 0 0 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <iyy>0.0001</iyy>
          <izz>0.0001</izz>
        </inertia>
      </inertial>
      <visual name="camera_visual">
        <geometry>
          <box>
            <size>0.06 0.04 0.04</size>
          </box>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.1 0.1 0.1 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>
      <collision name="camera_collision">
        <geometry>
          <box>
            <size>0.06 0.04 0.04</size>
          </box>
        </geometry>
      </collision>
      <!-- 摄像头传感器 -->
      <sensor name="camera" type="camera">
        <update_rate>30</update_rate>
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
      </sensor>
    </link>

    <joint name="camera_joint" type="fixed">
      <parent>gimbal_pitch</parent>
      <child>camera</child>
    </joint>

    <!-- ========== 云台模块结束 ========== -->

    <!-- IMU SENSOR ON CHASSIS -->
    <link name="imu_link">
      <pose relative_to="chassis">0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.01</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <sensor name="imu_sensor" type="imu">
        <update_rate>100</update_rate>
        <imu>
          <angular_velocity>
            <x>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>2e-4</stddev>
              </noise>
            </x>
            <y>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>2e-4</stddev>
              </noise>
            </y>
            <z>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>2e-4</stddev>
              </noise>
            </z>
          </angular_velocity>
          <linear_acceleration>
            <x>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>1.7e-2</stddev>
              </noise>
            </x>
            <y>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>1.7e-2</stddev>
              </noise>
            </y>
            <z>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>1.7e-2</stddev>
              </noise>
            </z>
          </linear_acceleration>
        </imu>
      </sensor>
    </link>

    <joint name="imu_joint" type="fixed">
      <parent>chassis</parent>
      <child>imu_link</child>
    </joint>

    <!-- MECANUM DRIVE PLUGIN -->
    <plugin filename="gz-sim-mecanum-drive-system" name="gz::sim::systems::MecanumDrive">
      <front_left_joint>front_left_wheel_joint</front_left_joint>
      <front_right_joint>front_right_wheel_joint</front_right_joint>
      <back_left_joint>rear_left_wheel_joint</back_left_joint>
      <back_right_joint>rear_right_wheel_joint</back_right_joint>
      <wheel_separation>0.5</wheel_separation>
      <wheelbase>0.5</wheelbase>
      <wheel_radius>0.15</wheel_radius>
      <topic>/cmd_vel</topic>
      <tf_topic>/tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_footprint</child_frame_id>
    </plugin>

    <!-- 云台控制插件 -->
    <plugin filename="gz-sim-joint-position-controller-system" name="gz::sim::systems::JointPositionController">
      <joint_name>gimbal_yaw_joint</joint_name>
      <topic>/gimbal/yaw/cmd_pos</topic>
      <p_gain>10</p_gain>
      <i_gain>0.1</i_gain>
      <d_gain>0.5</d_gain>
    </plugin>

    <plugin filename="gz-sim-joint-position-controller-system" name="gz::sim::systems::JointPositionController">
      <joint_name>gimbal_pitch_joint</joint_name>
      <topic>/gimbal/pitch/cmd_pos</topic>
      <p_gain>10</p_gain>
      <i_gain>0.1</i_gain>
      <d_gain>0.5</d_gain>
    </plugin>

    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
      <topic>joint_states</topic>
      <joint_name>front_left_wheel_joint</joint_name>
      <joint_name>front_right_wheel_joint</joint_name>
      <joint_name>rear_left_wheel_joint</joint_name>
      <joint_name>rear_right_wheel_joint</joint_name>
      <joint_name>gimbal_yaw_joint</joint_name>
      <joint_name>gimbal_pitch_joint</joint_name>
    </plugin>

    <!-- Pose Publisher Plugin for TF -->
    <plugin filename="gz-sim-pose-publisher-system" name="gz::sim::systems::PosePublisher">
      <publish_link_pose>true</publish_link_pose>
      <publish_collision_pose>false</publish_collision_pose>
      <publish_visual_pose>false</publish_visual_pose>
      <publish_nested_model_pose>true</publish_nested_model_pose>
    </plugin>

  </model>
</sdf>